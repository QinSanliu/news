<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DayTheme_red" parent="AppTheme">
        <item name="colorPrimaryDark">@color/title_bc_red_dark</item>
        <item name="title_theme">@color/title_bc_red</item>
    </style>

    <style name="DayTheme_blue" parent="AppTheme">
        <item name="title_theme">@color/title_bc_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="DayTheme_green" parent="AppTheme">
        <item name="colorPrimaryDark">@color/title_bc_green_dark</item>
        <item name="title_theme">@color/title_bc_green</item>
    </style>

    <style name="DayTheme_purple" parent="AppTheme">
        <item name="colorPrimaryDark">@color/title_bc_purple_dark</item>
        <item name="title_theme">@color/title_bc_purple</item>
    </style>

    <!-- 左侧侧滑菜单底部的按钮风格-->
    <style name="left_bottom_button_style">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/left_menu_bottom_button_bc_state</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 导航字体的大小和颜色-->
    <style name="navigation_item_front_state_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/navigation_item_font_state_color</item>
    </style>

</resources>
